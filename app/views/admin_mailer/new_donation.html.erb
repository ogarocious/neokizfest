<% if @waived_refund %>
<div style="background: linear-gradient(135deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 165, 0, 0.10) 100%); border: 1px solid rgba(255, 215, 0, 0.3); border-radius: 8px; padding: 16px; margin: 0 0 24px; text-align: center;">
  <p style="color: #FFD700; font-weight: 700; font-size: 16px; margin: 0;">&#11088; Waived Refund + Donated &#11088;</p>
  <p style="color: #E8E0D8; font-size: 13px; margin: 8px 0 0;">This person waived their refund AND made a donation on top of it.</p>
</div>
<% end %>
<p style="font-size: 18px; margin-bottom: 24px;"><%= @waived_refund ? "Waive + donate received!" : "New donation received!" %></p>

<div style="background-color: #1B251B; border: 1px solid #1C3C1C; border-radius: 8px; padding: 24px; margin: 24px 0;">
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
      <td style="padding: 8px 0; color: #9A8F85; font-size: 14px;">Amount</td>
      <td style="padding: 8px 0; color: #228B22; font-weight: 700; font-size: 24px; text-align: right;">$<%= sprintf("%.2f", @amount) %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #9A8F85; font-size: 14px;">Donor</td>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #E8E0D8; font-weight: 600; text-align: right;"><%= @name %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #9A8F85; font-size: 14px;">Email</td>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #E8E0D8; text-align: right;"><%= @email %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #9A8F85; font-size: 14px;">Payment ID</td>
      <td style="padding: 8px 0; border-top: 1px solid #313131; color: #E8E0D8; font-family: monospace; font-size: 13px; text-align: right;"><%= @identifier %></td>
    </tr>
  </table>
</div>
